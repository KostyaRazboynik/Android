<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="horizontal"
    tools:context="com.kostyamuzhik.myapplication.MainActivity">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/expression"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:ellipsize="start"
            android:gravity="end"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textIsSelectable="true"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/result_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ellipsize="start"
            android:gravity="end"
            android:singleLine="true"
            android:textColor="#646464"
            android:textSize="30sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/ActionButton.Land"
                android:layout_width="207dp"
                android:background="@color/black" />

            <Button
                android:id="@+id/btn_back"
                style="@style/ActionButton.Land"
                android:background="@color/black"
                android:text="@string/back"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_C"
                style="@style/DeleteButton.Land"
                android:text="@string/C" />

            <Button
                android:id="@+id/btn_left_bracket"
                style="@style/ActionButton.Land"
                android:text="@string/leftBracket"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/btn_right_bracket"
                style="@style/ActionButton.Land"
                android:text="@string/rightBracket"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/btn_divide"
                style="@style/ActionButton.Land"
                android:text="@string/divide" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_7"
                style="@style/NumberButton.Land"
                android:text="@string/_7" />

            <Button
                android:id="@+id/btn_8"
                style="@style/NumberButton.Land"
                android:text="@string/_8" />

            <Button
                android:id="@+id/btn_9"
                style="@style/NumberButton.Land"
                android:text="@string/_9" />

            <Button
                android:id="@+id/btn_multiply"
                style="@style/ActionButton.Land"
                android:text="@string/multiply" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_4"
                style="@style/NumberButton.Land"
                android:text="@string/_4" />

            <Button
                android:id="@+id/btn_5"
                style="@style/NumberButton.Land"
                android:text="@string/_5" />

            <Button
                android:id="@+id/btn_6"
                style="@style/NumberButton.Land"
                android:text="@string/_6" />

            <Button
                android:id="@+id/btn_subtract"
                style="@style/ActionButton.Land"
                android:text="@string/subtract" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_1"
                style="@style/NumberButton.Land"
                android:text="@string/_1" />

            <Button
                android:id="@+id/btn_2"
                style="@style/NumberButton.Land"
                android:text="@string/_2" />

            <Button
                android:id="@+id/btn_3"
                style="@style/NumberButton.Land"
                android:text="@string/_3" />

            <Button
                android:id="@+id/btn_add"
                style="@style/ActionButton.Land"
                android:text="@string/add" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_dot"
                style="@style/NumberButton.Land"
                android:text="@string/dot"
                android:gravity="center_horizontal"/>

            <Button
                android:id="@+id/btn_0"
                style="@style/NumberButton.Land"
                android:text="@string/_0" />

            <TextView
                style="@style/NumberButton.Land"
                android:background="@color/black" />

            <Button
                android:id="@+id/btn_equal"
                style="@style/EqualsButton.Land"
                android:text="@string/equal" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>